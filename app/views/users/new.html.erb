<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %>
  </div>

  <div>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :username %>
  </div>

  <div> 
    <%= f.text_field :username %>
  </div>

  <div> 
    <%= f.label :password %>
  </div>

  <div>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "Register" %>
  </div>
<% end %>

<div>
  <% if flash[:notice].present? %>
    <%= flash[:notice] %>
  <% end %>
</div>
