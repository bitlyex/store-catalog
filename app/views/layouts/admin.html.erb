<!DOCTYPE html> <html>
  <head>
    <title>Barito Loging Cache</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1> {INTERNAL} </h1>
    <% if current_user %>
      <div> Selamat datang <%= current_user.name %> </div>
      <%= link_to 'Logout', session_path(current_user), method: :delete %>
    <% else %>
      Silakan login lebih dahulu
    <% end %>
    <%= yield %>
  </body>
</html>
